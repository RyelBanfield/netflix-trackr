<div class="row">
  <div class="col-sm-6">
    <h1>All Users</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_review_path, class: 'btn' do %>
    Add New Review
  <% end %>
  </div>
</div>

<div class="table-responsive mt-3 mt-md-0">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>

        <th>User</th>
        <th>Most Recent Review</th>
        
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>

        <%= content_tag :tr, id: dom_id(user), class: dom_class(user) do %>
          <td><%= user.first_name.capitalize %></td>
          <td><%= user.reviews.last.title %></td>
        <% end %>

      <% end %>
    </tbody>
  </table>
</div>
