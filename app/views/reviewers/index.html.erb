<div class="row">
  <div class="col-sm-6">
    <h1>Most Recent Reviews</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_review_path, class: 'btn' do %>
    Add New Review
  <% end %>
  </div>
</div>

<div class="table-responsive mt-3 mt-md-0">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>

        <th>User</th>
        <th>Most Recent Review</th>
        
      </tr>
    </thead>

    <tbody>
      <% @users.includes(:reviews).each do |user| %>
        <% if user.reviews.to_a.length >= 1 %>
          <%= content_tag :tr, id: dom_id(user), class: dom_class(user) do %>
            <td><%= link_to user.first_name.capitalize, "/reviewer/#{user.id}", class: 'link' %></td>
            <td><%= checkForReviews(user)%></td>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
