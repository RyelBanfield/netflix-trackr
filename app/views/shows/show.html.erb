<div class="page-header">
  <%= link_to shows_path, class: 'btn' do %>
    All Shows
  <% end %>
  <% if @show.user = current_user%>
  <%= link_to edit_show_path(@show), class: 'btn' do %>
    Edit
  <% end %>
  <%= link_to show_path(@show), :method => :delete, data: { confirm: 'Are you sure?' }, class: 'btn' do %>
    Delete
  <% end %>
  <% end %>
  <h1 class="mt-3">Your review of <%= @show.title %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Rating:</dt>
  <dd><%= @show.rating %></dd>

  <dt>Comment:</dt>
  <dd><%= @show.comment %></dd>
</dl>
