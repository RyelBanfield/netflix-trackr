<div class="page-header">
  <%= link_to shows_path, class: 'btn btn-default' do %>
    All Shows
  <% end %>
  <%= link_to edit_show_path(@show), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show details</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @show.title %></dd>

  <dt>Comment:</dt>
  <dd><%= @show.comment %></dd>

  <dt>Rating:</dt>
  <dd><%= @show.rating %></dd>

</dl>
