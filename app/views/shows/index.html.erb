


<div class="row">
  <div class="col-sm-6">
    <h1>Your Reviews</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_show_path, class: 'btn' do %>
    Add New Review
  <% end %>
  </div>
</div>

<div class="table-responsive mt-3 mt-md-0">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>

        <th>Title</th>
        <th>Comment</th>
        <th>Rating</th>
        
      </tr>
    </thead>

    <tbody>
      <% @shows.each do |show| %>
        <% if show.user == current_user %>
          <%= content_tag :tr, id: dom_id(show), class: dom_class(show) do %>

            <td><%= link_to show.title.capitalize, show, class: "show-link" %></td>
            <td><%= show.rating %></td>
            <td><%= show.comment.capitalize %></td>
            
          <% end %>
        <% end%>
      <% end %>
    </tbody>
  </table>
</div>
